{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}